<section class="portafolio container-fluid bg-light">
  <div class="container py-5">
    <h2 class="text-center mb-5">PORTAFOLIO</h3>
      <div class="trabajos">
        {% for portfolio in portfolios %}
          <div class="row rounded shadow border p-1 mb-4 trabajo">
            <figure class="col-12 col-md-5 trabajo__imagen">
              <img src="{{ portfolio.image }}" alt="{{ portfolio.name }}">
            </figure>
            <div class="col-12 col-md-7 p-3 trabajo__info">
              <a class="enlace" href="{{ portfolio.link }}" target="_blank">
                <h4>{{ portfolio.name }}</h4>
              </a>
              <p>{{ portfolio.description }}</p>
              <div class="tecnologias">
                <p class="m-0">Tecnologias: <span>{{ portfolio.technologies }}</span></p>
              </div>
            </div>
          </div><!-- .trabajo -->
        {% endfor %}
      </div><!-- .trabajos -->
  </div><!-- .container -->
</section><!-- secciÃ³n portafolio -->