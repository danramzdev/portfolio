{% extends 'layouts/users.twig' %}

{% block title %}Inicia Sesión{% endblock %}

{% block content %}
  <div class="h-100">
    <div class="container h-100 d-flex flex-column justify-content-center">
      <div class="row">
        <form class="col-4 mx-auto" action="/login" method="post">
          <h4 class="text-center text-secondary">Inicia Sesión</h4>
          <div class="form-group">
            <input class="form-control" name="email" type="email" placeholder="Email">
          </div>
          <div class="form-group">
            <input class="form-control" name="password" type="password" placeholder="Contraseña">
          </div>
          <div class="row">
            <input class="btn btn-primary mx-auto" type="submit" value="Entrar">
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}